{% extends 'base.html.twig' %}

{% block title %}Forecast index{% endblock %}

{% block body %}
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">   <h1>Forecasts List</h1></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/city">Cities</a>
                </li>
                <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/forecast">Forecasts</a>
                </li>
            </ul>

            </div>
        </div>
        </nav>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Temperature</th>
                <th>Rain</th>
                <th>Humidity</th>
                <th>Date</th>
                <th>Wind</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for forecast in forecasts %}
            <tr>
                <td>{{ forecast.id }}</td>
                <td>{{ forecast.temperature }}</td>
                <td>{{ forecast.rain }}</td>
                <td>{{ forecast.humidity }}</td>
                <td>{{ forecast.date ? forecast.date|date('Y-m-d') : '' }}</td>
                <td>{{ forecast.wind }}</td>
                <td>
                   
                   
                {% if is_granted('ROLE_FORECAST_SHOW') %}
                     <a href="{{ path('app_forecast_show', {'id': forecast.id}) }}">show</a>
                {% endif %}
                {% if is_granted('ROLE_FORECAST_EDIT') %}
                     <a href="{{ path('app_forecast_edit', {'id': forecast.id}) }}">edit</a>
                {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    {% if is_granted('ROLE_FORECAST_NEW') %}
        <a href="{{ path('app_forecast_new') }}">Create new</a>
    {% endif %}
{% endblock %}
