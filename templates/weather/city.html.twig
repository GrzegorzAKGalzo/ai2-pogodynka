{% extends 'base.html.twig' %}
{# @var location \App\Entity\City #}
{# @var weather \App\Entity\Weather #}


{% block title %}Weather in { {location.name}}, {{ location.code}}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<main>
    <h1>Weather in {{ location.name }}, {{ location.code }}</h1>

    <ul>
        {% for forecast in forecasts %}
            <li>{{ forecast.date|date('d.m.Y') }}: {{ forecast.temperature }}&deg;C</li>
        {% endfor %}
    </ul>
</main>
{% endblock %}
